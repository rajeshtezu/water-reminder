{
  "manifest_version": 3,
  "name": "Drink Water",
  "version": "1.0.0",
  "description": "Water intake reminder",
  "action": {
    "default_icon": {
      "16": "assets/drop.png",
      "48": "assets/drop.png",
      "128": "assets/drop.png"
    },
    "default_title": "Drink Water",
    "default_popup": "popup/popup.html"
  },
  "options_page": "option/option.html",
  "background": {
    "service_worker": "sw/service-worker.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications"]
}
